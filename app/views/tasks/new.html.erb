<div class="container">
  <h1> New task </h1>

  <%= form_with model: @task do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.submit "create task" %>
  <% end %>

  <div class="d-flex mt-4">
    <i class="fa-solid fa-arrow-rotate-left"></i><%= link_to "back", tasks_path, class: "btn btn-primary back-btn" %>
  </div>
</div>
