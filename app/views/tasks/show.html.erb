<div class="container">
  <div class="d-flex justify-content-center mt-4">
    <div class="row col-6">
      <h1><%= @task.title %></h1>


      <p>
      <%= @task.details %>
      <br>
      <%= @task.completed %>
      </p>

      <br>
      <%= link_to 'Delete',
          task_path(@task),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      <br>
      <%= link_to "Edit", edit_path %>
      <br>
      <%= link_to "Back to list", tasks_path %>
    </div>
  </div>
</div>
